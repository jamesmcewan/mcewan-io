{
  "version": 2,
  "name": "mcewan-io",
  "alias": "mcewan.io",
  "builds": [
    {
      "src": "build.sh",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {
      "src": "^/images/(.*)",
      "headers": { "cache-control": "max-age=31536000,immutable" }
    },
    {
      "src": "^/icons/(.*)",
      "headers": { "cache-control": "max-age=31536000,immutable" }
    },
    {
      "src": "^/(.*).html",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" }
    }
  ]
}
