{
  "version": 2,
  "name": "mcewan-io",
  "alias": "mcewan.io",
  "builds": [
    {
      "src": "build.sh",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    }
  ],
  "routes": [
    {"src": "^/css/(.*)", "headers": {"cache-control": "public,max-age=31536000,immutable"} },
    {"src": "^/images/(.*)", "headers": {"cache-control": "max-age=31536000,immutable"} },
    {"src": "^/fonts/(.*)", "headers": {"cache-control": "max-age=31536000,immutable"} },
    {"src": "^/sketchbook/images/(.*)", "headers": {"cache-control": "max-age=31536000,immutable"} },
    {"src": "^/(.*).html", "headers": {"cache-control": "public,max-age=0,must-revalidate"} }
  ]
}